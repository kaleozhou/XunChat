<?xml version="1.0" encoding="utf-8"?>
	 
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape >
            <!-- 描边 -->
            <stroke
                android:width="2dp"
                android:color="@color/verify"
                 />
            <!-- 圆角 -->
            <corners
                android:radius="3dp" />
         <solid android:color="@color/verify"/>
                 <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
    <item android:state_focused="false" >
        <shape >
            <!-- 描边 -->
            <stroke
                android:width="2dp"
                android:color="@color/verify"
                 />
            <!-- 圆角 -->
            <corners
                android:radius="3dp" />
         <solid android:color="@color/white"/>
                 <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
</selector>